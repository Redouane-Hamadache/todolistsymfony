{% extends 'base.html.twig' %}

{% block title %}{{ 'Liste de taches'|trans }}{% endblock %}

{% block body %}

{% if app.user %}

<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="d-flex justify-content-center">
    <div class="example-wrapper">
        <h1>{{ 'Bienvenue'|trans }} {{app.user.firstname}} !</h1>
        <a type="button" class="btn btn-primary" href="{{ path('app_task', {_locale: app.request.locale}) }}">{{ 'Accédez a votre liste de tâches'|trans }}</a>
    </div>
</div>

{% else %}

<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div class="d-flex justify-content-center">
    <div class="example-wrapper">
        <h1>{{ 'Bienvenue'|trans }} !</h1>

        <p>
            {{ "Pour accéder à votre propre To Do List, veuillez vous connecter."|trans }} <br>
            {{ "C'est votre première fois sur ce site ? Inscrivez-vous !"|trans }}
        </p>
        <a type="button" class="btn btn-primary" href="{{ path('app_login', {_locale: app.request.locale}) }}">{{ 'Connexion'|trans }}</a>
        <a type="button" class="btn btn-primary" href="{{ path('app_register', {_locale: app.request.locale}) }}">{{ 'Inscription'|trans }}</a>
    </div>
</div>

{% endif %}


{% endblock %}
